-- Create the ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "UpdateMessageGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")

-- Create the TextLabel for the main message
local mainMessage = Instance.new("TextLabel")
mainMessage.Size = UDim2.new(1, 0, 0.5, 0) -- Top half of the screen
mainMessage.BackgroundTransparency = 0.5 -- Slight transparency
mainMessage.BackgroundColor3 = Color3.new(0, 0, 0) -- Black background
mainMessage.TextColor3 = Color3.new(1, 1, 1) -- White text
mainMessage.Text = "Script is updated, check Discord"
mainMessage.Font = Enum.Font.SourceSansBold
mainMessage.TextScaled = true -- Scale text to fit the label
mainMessage.Parent = screenGui

-- Create the TextLabel for the Discord link
local discordLink = Instance.new("TextLabel")
discordLink.Size = UDim2.new(1, 0, 0.5, 0) -- Bottom half of the screen
discordLink.Position = UDim2.new(0, 0, 0.5, 0)
discordLink.BackgroundTransparency = 0.5 -- Slight transparency
discordLink.BackgroundColor3 = Color3.new(0, 0, 0) -- Black background
discordLink.TextColor3 = Color3.new(1, 1, 1) -- White text
discordLink.Text = "https://discord.gg/gFNTebhGFU"
discordLink.Font = Enum.Font.SourceSansBold
discordLink.TextScaled = true -- Scale text to fit the label
discordLink.Parent = screenGui

-- Function to create an RGB effect
local function rgbEffect(textLabel)
    local hue = 0
    local function updateColor()
        hue = hue + 1
        if hue >= 360 then
            hue = 0
        end
        textLabel.TextColor3 = Color3.fromHSV(hue/360, 1, 1)
    end
    while textLabel.Parent do
        updateColor()
        wait(0.03)
    end
end

-- Start the RGB effect for the Discord link
spawn(function()
    rgbEffect(discordLink)
end)

-- Optional: Add a button to close the message
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 200, 0, 50)
closeButton.Position = UDim2.new(0.5, -100, 0.9, -25) -- Centered at the bottom
closeButton.BackgroundTransparency = 0.5
closeButton.BackgroundColor3 = Color3.new(1, 0, 0) -- Red button
closeButton.TextColor3 = Color3.new(1, 1, 1) -- White text
closeButton.Text = "Close"
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextScaled = true
closeButton.Parent = screenGui

-- Close button functionality
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
